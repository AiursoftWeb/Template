@model Aiursoft.Template.Models.RolesViewModels.IndexViewModel

<h1>Manage Roles</h1>

<p>
    <a asp-action="Create">Create a new role</a>
</p>
<table class="table">
    <thead>
    <tr>
        <th>
            Role Name
        </th>
        <th>
            User Count
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Roles)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Role.Name)
            </td>
            <td>
                @item.UserCount
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Role.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Role.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Role.Id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
