@using Aiursoft.Template.Authorization
@using Microsoft.Extensions.Localization
@model Aiursoft.Template.Models.RolesViewModels.DetailsViewModel
@inject IStringLocalizer<AppPermissions> PermissionLocalizer

<h1>@Localizer["Role Details:"] @Model.Role.Name</h1>
<p>@Localizer["A comprehensive overview of the role, its permissions, and assigned users."]</p>
<hr />

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <i class="fas fa-shield-alt"></i> @Localizer["Permissions Granted by this Role"]
            </div>
            <div class="card-body">
                @if (Model.Permissions.Any())
                {
                    <dl>
                        @foreach (var permission in Model.Permissions)
                        {
                            <dt>@PermissionLocalizer[permission.Name]</dt>
                            <dd class="pb-2">@PermissionLocalizer[permission.Description]</dd>
                        }
                    </dl>
                }
                else
                {
                    <p class="text-muted">@Localizer["This role has no specific permissions assigned."]</p>
                }
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <i class="fas fa-users"></i> @Localizer["Users with this Role"]
            </div>
            @if (Model.UsersInRole.Any())
            {
                <ul class="list-group list-group-flush">
                    @foreach (var user in Model.UsersInRole)
                    {
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            @user.UserName
                            <a asp-controller="Users" asp-action="Details" asp-route-id="@user.Id" class="btn btn-sm btn-outline-primary">
                                @Localizer["View User"]
                            </a>
                        </li>
                    }
                </ul>
            }
            else
            {
                <div class="card-body">
                    <p class="text-muted">@Localizer["No users are currently assigned to this role."]</p>
                </div>
            }
        </div>
    </div>
</div>

<div class="mt-4">
    <a asp-action="Edit" asp-route-id="@Model.Role.Id" class="btn btn-primary">@Localizer["Edit this Role"]</a>
    <a asp-action="Delete" asp-route-id="@Model.Role.Id" class="btn btn-danger">@Localizer["Delete this Role"]</a>
    <a asp-action="Index" class="ml-3">@Localizer["Back to Roles List"]</a>
</div>
