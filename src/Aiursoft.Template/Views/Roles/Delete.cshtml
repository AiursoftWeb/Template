@model Aiursoft.Template.Models.RolesViewModels.DeleteViewModel

<h1>@Localizer["Delete"]</h1>

<h3>@Localizer["Are you sure you want to delete this role?"]</h3>
<div>
    <h4>@Localizer["Role"]</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Localizer["Role name"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Role.Name)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="@Model.Role.Id" />
        <input type="submit" value="@Localizer["Delete"]" class="btn btn-danger" /> |
        <a asp-action="Index">@Localizer["Back to List"]</a>
    </form>
</div>
