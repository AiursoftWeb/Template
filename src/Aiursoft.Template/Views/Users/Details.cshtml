@using Aiursoft.Template.Authorization
@using Aiursoft.WebTools
@using Microsoft.Extensions.Localization
@model Aiursoft.Template.Models.UsersViewModels.DetailsViewModel
@inject IStringLocalizer<AppPermissions> PermissionLocalizer
@{
    ViewData["Title"] = "User Details";
}

<h1>@Localizer["User Details:"] @Model.User.UserName</h1>
<p>@Localizer["An overview of the user's profile, assigned roles, and effective permissions."]</p>
<hr />

<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-user"></i> @Localizer["Basic Information"]
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">@Localizer["User name"]</dt>
            <dd class="col-sm-9">@Model.User.UserName</dd>

            <dt class="col-sm-3">@Localizer["Name"]</dt>
            <dd class="col-sm-9">@Model.User.DisplayName</dd>

            <dt class="col-sm-3">@Localizer["Email"]</dt>
            <dd class="col-sm-9">@Model.User.Email</dd>

            <dt class="col-sm-3">@Localizer["Creation Time"]</dt>
            <dd class="col-sm-9">
                <label data-utc-time="@Model.User.CreationTime.ToHtmlDateTime()" class="text-monospace"></label>
            </dd>
        </dl>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <i class="fas fa-user-tag"></i> @Localizer["Assigned Roles"]
            </div>
            <div class="card-body">
                @if (Model.Roles.Any())
                {
                    foreach (var role in Model.Roles)
                    {
                        <a asp-controller="Roles" asp-action="Details" asp-route-id="@role.Id"
                           class="btn btn-outline-primary m-1">
                            @role.Name
                        </a>
                    }
                }
                else
                {
                    <p class="text-muted">@Localizer["This user has not been assigned any roles."]</p>
                }
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <i class="fas fa-shield-alt"></i> @Localizer["Effective Permissions (from all roles)"]
            </div>
            @if (Model.Permissions.Any())
            {
                <ul class="list-group list-group-flush">
                    @foreach (var permission in Model.Permissions)
                    {
                        <li class="list-group-item">
                            <strong>@PermissionLocalizer[permission.Name]</strong>
                            <small class="d-block text-muted">@PermissionLocalizer[permission.Description]</small>
                        </li>
                    }
                </ul>
            }
            else
            {
                 <div class="card-body">
                    <p class="text-muted">@Localizer["This user has no effective permissions."]</p>
                </div>
            }
        </div>
    </div>
</div>


<div class="mt-4">
    <a asp-action="Edit" asp-route-id="@Model.User.Id" class="btn btn-primary">@Localizer["Edit this User"]</a>
    <a asp-action="Delete" asp-route-id="@Model.User.Id" class="btn btn-danger">@Localizer["Delete this User"]</a>
    <a asp-action="Index" class="ml-3">@Localizer["Back to list"]</a>
</div>
