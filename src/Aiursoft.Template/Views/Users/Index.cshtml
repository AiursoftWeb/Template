@model Aiursoft.Template.Models.UsersViewModels.IndexViewModel

<h1>Manage Users</h1>

<p>
    <a asp-action="Create">Add a new user</a>
</p>
<table class="table">
    <thead>
    <tr>
        <th>
            User name
        </th>
        <th>
            Email
        </th>
        <th>
            Roles
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Users)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.User.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.Email)
            </td>
            <td>
                @{
                    const int maxRolesToShow = 3;
                    var roles = item.Roles;
                    string displayRoles;

                    if (roles.Count > maxRolesToShow)
                    {
                        displayRoles = string.Join(", ", roles.Take(maxRolesToShow)) + "...";
                    }
                    else
                    {
                        displayRoles = string.Join(", ", roles);
                    }
                }
                @displayRoles
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.User.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.User.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.User.Id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
