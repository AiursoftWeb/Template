@inject IOptions<AppSettings> AppSettings
@using Aiursoft.Template.Configuration
@using Microsoft.Extensions.Options
@model Aiursoft.Template.Models.AccountViewModels.LoginViewModel

<h2>@Localizer["Login"]</h2>
<div class="row">
    <div class="col-md-8">
        <section>
            <form asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post"
                  class="form-horizontal">
                <h4>@Localizer["Use a local account to log in."]</h4>
                <hr/>
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="EmailOrUserName" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="EmailOrUserName" class="form-control"/>
                        <span asp-validation-for="EmailOrUserName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="Password" class="form-control"/>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10 mt-3">
                        <button type="submit" class="btn btn-secondary">@Localizer["Login"]</button>
                    </div>
                </div>

                @if (AppSettings.Value.Local.AllowRegister)
                {
                    <p>
                        <a asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]">@Localizer["Register as a new user"]</a>
                    </p>
                }
            </form>
        </section>
    </div>
</div>

