@model Aiursoft.Template.Models.ManageViewModels.ChangeProfileViewModel
<h2>@Localizer["Edit your profile"]</h2>

<form asp-controller="Manage" asp-action="ChangeProfile" method="post" class="form-horizontal">
    <h4>@Localizer["Change profile"]</h4>
    <hr />
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Name" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10 mt-3">
            <button type="submit" class="btn btn-secondary">@Localizer["Change profile"]</button>
        </div>
    </div>
</form>

